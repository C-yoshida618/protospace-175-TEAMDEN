
<div class="card">
  <div class="card__image">
    <%= image_tag prototype.image%>
  </div>
  <div class="card__body">
    <h2 class="card__title"><%= link_to prototype.title, prototype_path(prototype) %></h2>
   <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <p class="card__user"><%= link_to prototype.user.name, user_path(prototype.user) %></p>
  </div>
</div>
